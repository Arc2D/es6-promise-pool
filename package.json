    "console-stamp": "^0.1.3",
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.5",
    "mocha": "^2.1.0",
    "mocha-lcov-reporter": "0.0.1",
    "mocha-phantomjs": "^3.5.2",
    "phantomjs": "^1.9.13"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test":       "npm run mocha && npm run ph && npm run coveralls",
